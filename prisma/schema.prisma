// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Piece {
  id          Int    @id @default(autoincrement())
  o_id        Int
  class_name  String
  title       String
  image_path  String
  width       Int
  height      Int
  description String @db.VarChar(500)
  type        String
  sold        Boolean @default(false)
  price       Int
  instagram   String?
  real_width  Float
  real_height Float
  active      Boolean @default(true)
  theme       String?
  available   Boolean @default(true)
}

model Pending {
  id            Int    @id @default(autoincrement())
  piece_db_id   Int
  piece_title   String
  full_name     String
  phone         String
  email         String
  address       String
  international Boolean @default(false)
}

model Verified {
  id            Int    @id @default(autoincrement())
  piece_db_id   Int
  piece_title   String
  full_name     String
  phone         String
  email         String
  address       String
  international Boolean @default(false)
  image_path    String
  image_width   Int
  image_height  Int
  date          DateTime
  stripe_id     String
  price         Int
}
