{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "sourceMap": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "@/components/*": ["components/*"],
            "@/styles/*": ["styles/*"],
            "@/lib/*": ["lib/*"],
            "@/app/*": ["app/*"],
            "@/stores/*": ["stores/*"],
            "@/utils/*": ["utils/*"],
            "@/db/*": ["db/*"],
            "@/server/*": ["server/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "middleware.js",
        "src/app/api/checkout/webhook/route.js",
        "src/lib/*"
    ],
    "exclude": ["node_modules"]
}
