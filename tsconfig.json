{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "sourceMap": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/styles/*": ["src/styles/*"],
            "@/lib/*": ["src/lib/*"],
            "@/app/*": ["src/app/*"],
            "@/stores/*": ["src/stores/*"],
            "@/utils/*": ["src/utils/*"],
            "@/db/*": ["src/db/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "middleware.js",
        "src/app/api/checkout/webhook/route.js",
        "src/lib/*"
    ],
    "exclude": ["src/node_modules"]
}
